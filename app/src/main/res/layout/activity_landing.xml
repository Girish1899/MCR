<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".LandingActivity">
    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/app_bar_layout">

    </include>
    <RelativeLayout
        android:layout_below="@+id/main_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/login_photo"
        android:padding="5dp"
        android:scaleType="fitCenter"/>



    <Button
        android:layout_below="@id/image1"
        android:id="@+id/employee_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Employee Tracker"
        android:textAllCaps="false"
        android:background="@drawable/landing_btn"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/business_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/employee_track"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Business Tracker (chat)"
        android:textAllCaps="false"
        android:background="@drawable/landing_btn"
        android:padding="10dp"/>

        <Button
            android:id="@+id/Owner_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business_track"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Owner view"
            android:textAllCaps="false"
            android:background="@drawable/landing_btn"
            android:padding="10dp"/>
    <Button
        android:id="@+id/go_to_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Owner_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Settings"
        android:textAllCaps="false"
        android:background="@drawable/landing_btn"
        android:padding="10dp"/>
        <ImageView
            android:id="@+id/image2"
            android:padding="5dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/go_to_settings"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/signup_photo"
            android:scaleType="fitCenter"/>
    </RelativeLayout>



</RelativeLayout>