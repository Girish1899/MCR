<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <EditText
            android:id="@+id/password_reset_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/inputs"
            android:drawableStart="@drawable/email"
            android:hint="Enter your Registered Email Address..."
            android:inputType="textEmailAddress"
            android:padding="4dp" />

        <Button
            android:id="@+id/password_reset_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_reset_email"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/buttons"
            android:drawableStart="@drawable/ic_refresh_black_24dp"
            android:padding="4dp"
            android:text="Send Password Reset Email"
            android:textAllCaps="false"

            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>