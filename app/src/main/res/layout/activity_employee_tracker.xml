<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".EmployeeTrackerActivity">
    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/app_bar_layout">

    </include>


    <Button
        android:id="@+id/contact_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:text="Enter New Contact"
        android:textAllCaps="false"
        android:background="@drawable/landing_btn"
        android:padding="10dp"/>
    <Button
        android:id="@+id/phone_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/contact_entry"
        android:text="Phone Book"
        android:textAllCaps="false"
        android:background="@drawable/landing_btn"
        android:padding="10dp"/>

    <Button
        android:id="@+id/timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/phone_book"
        android:text="Timeline"
        android:textAllCaps="false"
        android:background="@drawable/landing_btn"
        android:padding="10dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/phone_book"
        android:text="Distance Tracker"
        android:textAllCaps="false"
        android:background="@drawable/landing_btn"
        android:padding="10dp"
        />


</RelativeLayout>